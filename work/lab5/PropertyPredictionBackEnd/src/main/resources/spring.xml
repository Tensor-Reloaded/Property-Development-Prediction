<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="imageUtils" class="com.example.propertypredictionbackend.utils.ImageUtils"/>
    <bean id="trackerForImageUtils" class="aspects.ImageUtilsAspect"/>

    <bean id="simpleFlow" class="com.example.propertypredictionbackend.flows.SimplePredictionFlow"/>
    <bean id="trackerForSimpleFlow" class="aspects.SimpleFlowAspect"/>

    <bean id="sizePreProcessor" class="com.example.propertypredictionbackend.preprocesors.ImageSizePreProcessor"/>
    <bean id="trackerForSize" class="aspects.SizePreProcessorAspect"/>

    <bean id="contrastPreProcessor" class="com.example.propertypredictionbackend.preprocesors.ImageContrastPreProcessor"/>
    <bean id="trackerForContrast" class="aspects.ContrastPreProcessorAspect"/>

    <bean id="imagePreProcessorFactory" class="com.example.propertypredictionbackend.preprocesors.ImagePreProcessorFactory" />

    <bean class="org.springframework.aop.aspectj.annotation.AnnotationAwareAspectJAutoProxyCreator"/>
</beans>